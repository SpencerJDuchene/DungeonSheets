<?xml version="1.0" encoding="UTF-8"?>
<project name="module_dungeonsheets" default="compile.module.dungeonsheets">
  <dirname property="module.dungeonsheets.basedir" file="${ant.file.module_dungeonsheets}"/>
  
  <property name="module.jdk.home.dungeonsheets" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.dungeonsheets" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.dungeonsheets" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.dungeonsheets" value="-encoding UTF-8 -source 8 -target 8 ${compiler.args}"/>
  
  <property name="dungeonsheets.output.dir" value="${module.dungeonsheets.basedir}/out/production/dungeonSheets"/>
  <property name="dungeonsheets.testoutput.dir" value="${module.dungeonsheets.basedir}/out/test/dungeonSheets"/>
  
  <path id="dungeonsheets.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="dungeonsheets.module.production.classpath">
    <path refid="${module.jdk.classpath.dungeonsheets}"/>
  </path>
  
  <path id="dungeonsheets.runtime.production.module.classpath">
    <pathelement location="${dungeonsheets.output.dir}"/>
  </path>
  
  <path id="dungeonsheets.module.classpath">
    <path refid="${module.jdk.classpath.dungeonsheets}"/>
    <pathelement location="${dungeonsheets.output.dir}"/>
  </path>
  
  <path id="dungeonsheets.runtime.module.classpath">
    <pathelement location="${dungeonsheets.testoutput.dir}"/>
    <pathelement location="${dungeonsheets.output.dir}"/>
  </path>
  
  
  <patternset id="excluded.from.module.dungeonsheets">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.dungeonsheets">
    <patternset refid="excluded.from.module.dungeonsheets"/>
  </patternset>
  
  <path id="dungeonsheets.module.sourcepath">
    <dirset dir="${module.dungeonsheets.basedir}">
      <include name="src"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.dungeonsheets" depends="compile.module.dungeonsheets.production,compile.module.dungeonsheets.tests" description="Compile module dungeonSheets"/>
  
  <target name="compile.module.dungeonsheets.production" depends="register.custom.compilers" description="Compile module dungeonSheets; production classes">
    <mkdir dir="${dungeonsheets.output.dir}"/>
    <javac2 destdir="${dungeonsheets.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.dungeonsheets}/javac">
      <compilerarg line="${compiler.args.dungeonsheets}"/>
      <bootclasspath refid="dungeonsheets.module.bootclasspath"/>
      <classpath refid="dungeonsheets.module.production.classpath"/>
      <src refid="dungeonsheets.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.dungeonsheets"/>
    </javac2>
    
    <copy todir="${dungeonsheets.output.dir}">
      <fileset dir="${module.dungeonsheets.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.dungeonsheets.tests" depends="register.custom.compilers,compile.module.dungeonsheets.production" description="compile module dungeonSheets; test classes" unless="skip.tests"/>
  
  <target name="clean.module.dungeonsheets" description="cleanup module">
    <delete dir="${dungeonsheets.output.dir}"/>
    <delete dir="${dungeonsheets.testoutput.dir}"/>
  </target>
</project>